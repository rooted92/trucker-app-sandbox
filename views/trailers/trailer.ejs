<% layout('layouts/boilerplate') %>
<div class="container flex-grow-1">
    <h1>Trailer Details</h1>
    <p><b>Trailer #:</b> <%= trailer.trailerId %></p>
    <p><b>Trailer Type:</b> <%= trailer.trailerType %></p>
    <p><b>Trailer Status:</b> <%= trailer.trailerStatus %></p>
    <p><b>Trailer Location:</b> <%= trailer.trailerLocation %></p>

    <div class="d-flex justify-content-start">
        <a class="me-3 link-offset-2-hover link-offset-3" href="/trailers">Back to Index</a>
        <a class="link-offset-2-hover link-offset-3" href="/trailer/<%= trailer._id %>/edit" >Edit Trailer</a>
    </div>
    <form class="mt-3" method="POST" action="/trailer/<%= trailer._id %>?_method=DELETE">
        <input class="bg-danger text-light border border-0 rounded p-1 px-2" type="submit" value="Delete Trailer">
    </form>
</div>