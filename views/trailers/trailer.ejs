<% layout('layouts/boilerplate') %>
    <div class="container flex-grow-1">
        <div class="row border-bottom border-primary border-opacity-50">
            <div class="col-6 d-flex">
                <h1>Trailer Details</h1>
            </div>
            <div class="col-6 d-flex justify-content-end align-items-center"> <a class="me-3 link-offset-2-hover link-offset-3"
                    href="/trailers"><i class="bi bi-arrow-left-short"></i> Back to Index</a>
                <a class="link-offset-2-hover link-offset-3" href="/trailers/<%= trailer._id %>/edit"><i
                        class="bi bi-pencil-square"></i> Edit</a>
            </div>
        </div>

        <div class="row d-flex justify-content-center my-5">
            <div class="col-12 col-md-4">
                <div class="card bg-dark text-light border-light border-3 p-2">
                    <h5 class="card-header border-primary border-opacity-50">
                        # <%= trailer.number %>
                        <span class="fs-6 font-monospace">- current location:
                            <% if(trailer.yard){ %>
                                <a class="text-info link-offset-2" href="/yards/<%= trailer.yard._id %>">
                                    <%= trailer.yard.name %>
                                </a>
                            <% } else { %>
                                <span class="text-secondary">'N/A'</span>
                            <% } %>
                        </span>
                    </h5>
                    <div class="card-body">
                        <h5 class="card-title">Status: <span
                                class="fs-6 fw-normal <%= trailer.trailerStatus === 'Available' ? 'text-success' : ''; %>">
                                <%= trailer.trailerStatus %>
                            </span></h5>
                        <div class="row d-flex justify-content-evenly my-3">
                            <div class="col-12">
                                <p class="card-text">Type: <%= trailer.type %>
                                </p>
                            </div>
                            <div class="col-12">
                                <p class="card-text">Length: <%= trailer.length %>
                                </p>
                            </div>
                            <div class="col-12">
                                <p class="card-text">Load Status: <%= trailer.loadStatus %>
                                </p>
                            </div>
                            <div class="col-12">
                                <p class="card-text">Cleanliness: <%= trailer.cleanliness %>
                                </p>
                            </div>
                            <div class="col-12">
                                <p class="card-text">Notes: <%= trailer.notes %>
                                </p>
                            </div>
                        </div>

                        <form method="POST" action="/trailers/<%= trailer._id %>?_method=DELETE">
                            <button class="btn btn-outline-danger">Delete <i class="bi bi-trash"></i></button>
                        </form>
                    </div>
                </div>
            </div>

        </div>

    </div>