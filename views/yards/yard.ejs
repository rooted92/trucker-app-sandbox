<% layout('layouts/boilerplate') %>
    <div class="container flex-grow-1">
        <h1>Yard Details</h1>
        <p><b>Yard Name:</b> <%= yard.name %></p>
        <p><b>Yard Location:</b> <%= yard.location %></p>
        <p><b>Yard Capacity:</b> <%= yard.capacity %></p>
        <p><b>Yard Status:</b> <%= yard.status %></p>
        <div class="d-flex justify-content-start">
            <a class="me-3 link-offset-2-hover link-offset-3" href="/yards">Back to Index</a>
            <a class="link-offset-2-hover link-offset-3" href="/yard/<%= yard._id %>/edit" >Edit Yard</a>
        </div>
        <form class="mt-3" method="POST" action="/yard/<%= yard._id %>?_method=DELETE">
            <input class="btn btn-danger p-1 px-2" type="submit" value="Delete Yard">
        </form>
        <a class="btn btn-dark border border-light mt-3" href="/yards/<%= yard._id %>/trailer-count/new">Submit Trailer Count</a>
    </div>