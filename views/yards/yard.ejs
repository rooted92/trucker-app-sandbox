<% layout('layouts/boilerplate') %>
    <div class="container flex-grow-1">

        <h1>Yard Details</h1>
        <p><b>Yard Name:</b> <%= yard.name %></p>
        <p><b>Yard Location:</b> <%= yard.location %></p>
        <p><b>Yard Capacity:</b> <%= yard.capacity %></p>
        <p><b>Yard Status:</b> <%= yard.status %></p>


        <a href="/yards">Back to Index</a>
        <br>
        <a href="/yard/<%= yard._id %>/edit">Edit Yard</a>
        <br>
        <form class="mt-3" method="POST" action="/yard/<%= yard._id %>?_method=DELETE">
            <input class="bg-danger text-light border border-0 rounded p-1 px-2" type="submit" value="Delete Yard">
        </form>

    </div>