<% layout('layouts/boilerplate') %>
    <div class="container flex-grow-1">
        <h1 class="border-bottom border-primary border-opacity-75 pb-3 mb-3">Account</h1>
        <div class="row">
            <div class="col-12 col-md-4">
                <div class="card text-bg-dark border-light border-3 p-2 mb-5 mt-2">
                    <div class="card-header border-primary border-opacity-75 fs-1">
                        <%= currentUser.companyName %>
                    </div>
                    <div class="card-body text-primary">
                        <div class="d-flex">
                            <p class="fw-bold">Username: <span class="fw-normal">
                                    <%= currentUser.username %>
                                </span></p>
                        </div>
                        <div class="d-flex">
                            <p class="fw-bold">Email: <span class="fw-normal">
                                    <%= currentUser.email %>
                                </span></p>
                        </div>
                        <div class="d-flex">
                            <p class="fw-bold">Phone: <span class="fw-normal">
                                    <%= currentUser.phone %>
                                </span></p>
                        </div>
                        <div class="d-flex">
                            <p class="fw-bold">Role: <span class="fw-normal">
                                    <%= currentUser.role %>
                                </span></p>
                        </div>
                        <div class="d-flex">
                            <p class="fw-bold">Company Join Code: <span class="fw-normal">
                                    <%= currentUser.joinCode %>
                                </span></p>
                        </div>
                        <div class="d-flex">
                            <a class="btn btn-dark btn-sm border-light me-2" href="#">
                                Edit <i class="bi bi-list-check"></i>
                            </a>
                            <!-- Add modal to confirm deletion -->
                            <form method="POST" action="">
                                <button class="btn btn-outline-danger btn-sm" type="submit">
                                    Delete Account <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>